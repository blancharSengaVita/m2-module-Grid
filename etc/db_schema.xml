<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="produweb_grid" resource="default" engine="innodb" comment="Exercice to create an admin test">
        <column xsi:type="int" name="slider_id" unsigned="true" nullable="false" identity="true"/>
        <column xsi:type="text" name="image_path" nullable="true"/>
        <column xsi:type="text" name="title" nullable="false" />
        <column xsi:type="text" name="description" nullable="true" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="slider_id"/>
        </constraint>
    </table>
</schema>

